#!/bin/bash

# Install other required packages if needed

PYTHON_VERSION=$(python -c "import sys; print(f'{sys.version_info.major}{sys.version_info.minor}')")
PLATFORM_SYSTEM=$(uname)

if [ "$PLATFORM_SYSTEM" == "Windows" ]; then
    WHL_FILE="pyopenms-3.0.0.dev20230316-cp${PYTHON_VERSION}-cp${PYTHON_VERSION}-win_amd64.whl"
elif [ "$PLATFORM_SYSTEM" == "Darwin" ]; then
    WHL_FILE="pyopenms-3.0.0.dev20230316-cp${PYTHON_VERSION}-cp${PYTHON_VERSION}-macosx_10_9_x86_64.whl"
else
    WHL_FILE="pyopenms-3.0.0.dev20230316-cp${PYTHON_VERSION}-cp${PYTHON_VERSION}-manylinux_2_17_x86_64.manylinux2014_x86_64.whl"
fi

pip install $WHL_FILE

